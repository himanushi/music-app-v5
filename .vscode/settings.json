{
	// svelte, html, css
	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,
	"svelte.plugin.css.enable": false,
	"stylelint.enable": true,

	// svelte, javascript, typescript, json
	"editor.formatOnSave": false,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.codeActionsOnSave": [
		"source.formatDocument",
		"source.fixAll.eslint",
		"source.fixAll.stylelint"
	],
	"eslint.validate": ["svelte", "javascript", "javascriptreact", "typescript", "typescriptreact"],
	"cSpell.words": [
		"applemusic",
		"camelcase",
		"codegen",
		"conds",
		"datetime",
		"dompurify",
		"Entrypoints",
		"graphiql",
		"haptics",
		"ismobilejs",
		"isrc",
		"mergewith",
		"nexttrack",
		"previoustrack",
		"routify",
		"roxi",
		"stylelint",
		"upsert",
		"xstate"
	]
}
